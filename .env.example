# ============================================================
# AI TEXTBOOK - ENVIRONMENT CONFIGURATION
# ============================================================
# Copy this file to .env and configure with your values

# ============================================================
# FRONTEND
# ============================================================
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# ============================================================
# BACKEND
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# ============================================================
# DATABASE
# ============================================================
DATABASE_URL=postgresql://user:password@localhost:5432/textbook_db
DATABASE_POOL_SIZE=10

# ============================================================
# AUTHENTICATION (BetterAuth)
# ============================================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

BETTERAUTH_SECRET=your-betterauth-secret-key
BETTERAUTH_PROVIDER=credentials

# ============================================================
# RAG SYSTEM
# ============================================================
RAG_EMBEDDINGS_MODEL=all-MiniLM-L6-v2
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=3
RAG_SCORE_THRESHOLD=0.5

# ============================================================
# VECTOR DATABASE (Qdrant)
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=textbook_documents

# ============================================================
# LLM PROVIDER
# ============================================================
# OpenAI
OPENAI_API_KEY=sk-
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.7

# Alternatively: Local LLM via Ollama
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama2

# ============================================================
# SPECKITPLUS
# ============================================================
SPECKITPLUS_KEY=your-speckitplus-api-key
SPECKITPLUS_WORKSPACE=ai-textbook

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================
# CORS & SECURITY
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ============================================================
# EMAIL (Optional - for notifications)
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================
# S3 / FILE STORAGE (Optional - for document uploads)
# ============================================================
S3_BUCKET_NAME=ai-textbook-docs
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ============================================================
# DEPLOYMENT
# ============================================================
ENVIRONMENT=development
DEPLOYMENT_TARGET=local  # or: docker, kubernetes, heroku
PROJECT_URL=http://localhost:3000
PROJECT_NAME=AI Textbook
